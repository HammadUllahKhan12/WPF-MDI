        <TextBox HorizontalAlignment="Left" Background="LightBlue" Name="txt_user_date" Height="23" IsEnabled="False" Margin="470,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="167"/>
